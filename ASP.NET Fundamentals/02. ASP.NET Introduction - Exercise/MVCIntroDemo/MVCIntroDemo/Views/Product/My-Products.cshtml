@using MVCIntroDemo.Models.Product;
@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "All Products";
}

<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (ProductViewModel product in Model)
        {
            <li class="list-group-item"><a asp-action="ById" asp-route-id="@product.Id">N.@(product.Id): @(product.Name) - @(product.Price).</a></li>
        }
    </ul>
    <form>
        <input style="width: 9rem" type="text" name="kw"/>
        <input style="width: 8rem" type="submit" value="Filter" />
    </form>
    <a asp-action="My-Products" class="btn btn-dark">Remove Filters</a>
</div>


