@using ToDoList.Core.Models
@model IEnumerable<TaskViewModel>

@{
    ViewData["Title"] = "To-Do List";
}
<h1 class="text-center">@ViewBag.Title</h1>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var t in Model)
        {
            <div class="col-sm-6 mb-3 mb-sm-3">
                <div class="card" id="customTaskDiv">
                    <div class="card-title text-center">@t.Title</div>
                    <div class="card-body">
                        <p>@t.Description</p>
                    </div>
                    <div class="card-footer">
                        <a href="#"><img src="~/images/pen.png" class="button" /></a>
                        <a class="btn btn-primary">Done</a>
                        <a href="#"><img src="~/images/delete.png" class="button" /></a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>You completed everything.</p>
}
<div class="addBtnDiv">
    <a class="btn btn-dark" asp-controller="Home" asp-action="Add">Add Task</a>
</div>
